<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_line_weight_picker"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/weight_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_margin"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginEnd="@dimen/app_margin"
            android:background="@null"
            android:button="@drawable/ic_line_weight_circle_60"
            tools:ignore="ContentDescription,DuplicateSpeakableTextCheck" />

        <RadioButton
            android:id="@+id/weight_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginEnd="25dp"
            android:background="@null"
            android:button="@drawable/ic_line_weight_circle_40"
            tools:ignore="ContentDescription" />

        <RadioButton
            android:id="@+id/weight_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginEnd="35dp"
            android:background="@null"
            android:button="@drawable/ic_line_weight_circle_20"
            android:checked="true"
            tools:ignore="ContentDescription" />

        <RadioButton
            android:id="@+id/weight_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginEnd="38dp"
            android:background="@null"
            android:button="@drawable/ic_line_weight_circle_15"
            tools:ignore="ContentDescription" />

        <RadioButton
            android:id="@+id/weight_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="@dimen/app_margin"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="@dimen/app_margin"
            android:background="@null"
            android:button="@drawable/ic_line_weight_circle_10"
            tools:ignore="ContentDescription" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>