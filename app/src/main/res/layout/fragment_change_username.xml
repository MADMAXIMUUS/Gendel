<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.settings.ChangeUsernameFragment">

    <EditText
        android:id="@+id/settings_input_username"
        style="@style/editText"
        android:hint="@string/settings_hint_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:ignore="Autofill"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_hint_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/username_hint_1"
        android:layout_margin="@dimen/app_margin"
        style="@style/smallText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_input_username" />

    <TextView
        android:id="@+id/username_hint_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/username_hint_2"
        android:layout_marginTop="@dimen/app_small_margin"
        android:layout_marginEnd="@dimen/app_margin"
        android:layout_marginStart="@dimen/app_margin"
        style="@style/smallText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_hint_1" />

</androidx.constraintlayout.widget.ConstraintLayout>