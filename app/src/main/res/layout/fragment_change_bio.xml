<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.settings.ChangeBioFragment">

    <EditText
        android:id="@+id/settings_input_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/settings_hint_bio"
        android:inputType="textMultiLine"
        android:minLines="1"
        android:maxLines="5"
        android:paddingEnd="40dp"
        android:paddingStart="0dp"
        android:maxLength="70"
        style="@style/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Autofill"
        android:importantForAutofill="no"/>

    <TextView
        android:id="@+id/bio_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin"
        android:text="@string/settings_bio_hint_text"
        android:textColor="@color/grey"
        android:textSize="@dimen/smallText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_input_bio" />

    <TextView
        android:id="@+id/bio_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/app_margin"
        android:text="@string/settings_max_count_bio"
        android:textColor="@color/grey"
        android:textSize="@dimen/smallText"
        android:layout_marginTop="@dimen/app_small_margin"
        app:layout_constraintEnd_toEndOf="@+id/settings_input_bio"
        app:layout_constraintTop_toTopOf="@+id/settings_input_bio" />


</androidx.constraintlayout.widget.ConstraintLayout>